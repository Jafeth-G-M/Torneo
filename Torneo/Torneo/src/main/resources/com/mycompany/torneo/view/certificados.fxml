<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
            fx:controller="com.mycompany.torneo.controller.CertificadoController"
            prefWidth="600" prefHeight="450">
    <children>
        <Label fx:id="lblNombreEquipo" layoutX="50" layoutY="30" prefWidth="500"
               style="-fx-font-size: 24px; -fx-text-fill: darkblue;" alignment="CENTER"/>
        <ImageView fx:id="imgEquipo" layoutX="200" layoutY="70" fitWidth="200" fitHeight="150"/>
        <Label fx:id="lblInfoTorneo" layoutX="50" layoutY="230" prefWidth="500"
               style="-fx-font-size: 16px;" alignment="CENTER"/>
        <Label fx:id="lblResumen" layoutX="50" layoutY="260" prefWidth="500"
               style="-fx-font-size: 16px;" alignment="CENTER"/>
        <Button fx:id="btnGenerarPDF" text="Generar Certificado PDF" layoutX="200" layoutY="350"
                onAction="#generarPDF"/>
    </children>
    
</AnchorPane>
